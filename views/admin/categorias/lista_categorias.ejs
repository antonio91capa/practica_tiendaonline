<%- include('../../_layouts/adminHeader'); %>

<div class="col-md-12">
   <h2 class="page-title">Categorías</h2>
   <a href="/admin/categoria/add" class="btn btn-primary">Crear nueva categoría</a>
   <br><br>

   <% if (categorias.length > 0) { %>
      <table class="table table-striped table-hover table-bordered">
         <thead class="bg-dark text-white text-center">
            <tr>
               <th class="home">Nombre</th>
               <th>Editar</th>
               <th>Eliminar</th>
            </tr>
         </thead>
         <tbody>
            <% categorias.forEach(function(categoria){ %>
            <tr id="id_<%= categoria._id %>" class="<%= categoria.slug %>">
               <td><%= categoria.nombre %></td>
               <td><a class="btn btn-sm btn-success" href="/admin/categoria/editar/<%= categoria._id %>">Editar</a></td>
               <td><a class="btn btn-sm btn-danger confirmDelete" href="/admin/categoria/eliminar/<%= categoria._id %>">Eliminar</a></td>
            </tr>
            <% }); %>
         </tbody>
      </table>
   <% }else { %>
      <h3 class="text-center">No hay categorías</h3>
   <% } %>
</div>

<%- include('../../_layouts/adminFooter'); %>