<%- include('../../_layouts/adminHeader'); %>

<div class="col-md-3">
   <a href="/admin/pages" class="btn btn-light">&laquo; Regresar a pages</a>
</div>

<div class="col-md-6 mt-5">
   <h2 class="page-title text-center">Nuevo Page</h2>
   <br>

   <form method="POST" action="/admin/pages/add">
      <div class="form-group">
         <label for="nombre">Titulo</label>
         <input type="text" class="form-control" name="nombre" value="<%= nombre %>" 
            placeholder="Titulo">
      </div>

      <div class="form-group">
         <label for="slug">Slug</label>
         <input type="text" class="form-control" name="slug" value="<%= slug %>" 
            placeholder="Slug">
      </div>

      <div class="form-group">
         <label for="contenido">Contenido</label>
         <textarea name="contenido" id="contenido" class="form-control" cols="30" rows="10"
            placeholder="Contenido"><%= contenido %></textarea>
      </div>

      <button type="submit" class="btn btn-primary btn-block">Guardar</button>
   </form>
</div>

<%- include('../../_layouts/adminFooter'); %>