<%- include('../../_layouts/adminHeader'); %>

<div class="col-md-12">
   <a href="#" class="btn btn-primary">Nuevo usuario <i class="fas fa-user"></i></a>
   <br><br>

   <% if(usuarios.length > 0) { %>
      <table class="table table-bordered table-striped table-hover">
         <thead class="thead-dark">
            <tr>
               <td>Nombre</td>
               <td>Correo electr√≥nico</td>
               <td>Username</td>
               <td>Estado</td>
               <td>Permiso Administrador</td>
               <td>Action</td>
            </tr>
         </thead>
         <tbody>
            <% usuarios.forEach(function (usuario){%>
            <tr>
               <td><%= usuario.nombre %></td>
               <td><%= usuario.email %></td>
               <td><%= usuario.username %></td>
               <td>
                  <% if(usuario.status == 'activo') { %>
                     <span class="text-success"><%= usuario.status %></span>
                  <% }else { %>
                     <span class="text-danger"><%= usuario.status %></span>
                  <% } %>
                  </td>
               <td><%= usuario.admin %></td>
               <td>
                  <a href="#" class="btn btn-outline-success">
                     <i class="fas fa-pencil-alt"></i> Editar
                  </a>
                  <a href="#" class="btn btn-outline-danger">
                     <i class="fas fa-times"></i> Eliminar
                  </a>
               </td>
            </tr>
            <% }); %>
         </tbody>
      </table>
   <% }else { %>
      <h3 class="text-center">No hay usuarios</h3>
   <% } %>
</div>

<%- include('../../_layouts/adminFooter'); %>