<%- include('../../_layouts/header'); %>

<%- include('../../_layouts/sidebar'); %>

<div class="row productos">
   <% productos.forEach(function(producto) { %>
      <div class="col-xs-12 col-md-4 productoDiv">
         <a href="/productos/<%= producto.categoria %>/<%= producto.slug%>" class="pa">
            <img src="/producto_imagenes/<%= producto._id %>/<%= producto.imagen %>" 
               alt="" class="pimagen">
         </a>
         <h3><%= producto.nombre %></h3>
         <h4>$<%= parseFloat(producto.precio).toFixed(2) %></h4>
         <a href="/productos/<%= producto.categoria %>/<%= producto.slug %>" 
            class="vd">Ver Detalles</a>
      </div>
   <% }); %>
</div>

<%- include('../../_layouts/footer'); %>